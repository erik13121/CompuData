
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model CompuData.Models.DonationItem
    HttpContext.Current.Response.Cache.SetAllowResponseInBrowserHistory(false);
    HttpContext.Current.Response.Cache.SetCacheability(HttpCacheability.NoCache);
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>

<nav id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../MainMenu">Home</a></li>
        @if (ViewBag.Referrer != null ? ViewBag.Referrer == "AddDonationItem" : false)
        {
            <li class="breadcrumb-item"><a href="../DonationsMenu">Donation Menu</a></li>
            <li class="breadcrumb-item"><a href="../Donationitem">Donation Item</a></li>
            <li class="breadcrumb-item"><a href="../AddDonationItem">Add Donation Item</a></li>
        }
        else
        {
            // I DONT KNOW HERE ...
            <li class="breadcrumb-item"><a href="../DonationsMenu">Donation Menu</a></li>
            <li class="breadcrumb-item"><a href="../Donation Item">Donation Item</a></li>
        }
        <li class="breadcrumb-item active" aria-current="page">Add Donation Item</li>
    </ol>
</nav>

@Html.Partial("_ProfilePartial")

<div id="details_holder">
    @using (@Html.BeginForm("Create", "AddDonationItem", FormMethod.Post, new { id = "myForm" }))
    {
        <p>Add Donation Item</p>
        @Html.HiddenFor(model => model.DonationItemID)
        <div>
            <p>Description:</p>
            @Html.EditorFor(model => model.Description)
        </div>
        @Html.ValidationMessageFor(model => model.Description)
        <div>
            <p>Total Amount:</p>
            @Html.EditorFor(model => model.TotalAmount)
        </div>
        @Html.ValidationMessageFor(model => model.TotalAmount)       
        <div>
            <p>Donation Type:</p>
            @Html.DropDownListFor(model => model.TypeID, new SelectList(Model.DonationTypes, "TypeID", "TypeName"), Model.DonationTypes.Count == 0 ? "Please add Type" : null)
        </div>
        @Html.ValidationMessageFor(model => model.TypeID)
        <div>
            <p>Quantity Type:</p>
            @Html.DropDownListFor(model => model.QuantityTypeID, new SelectList(Model.QuantityTypes, "QuantityTypeID", "Description"), Model.QuantityTypes.Count == 0 ? "Please add Type" : null)
        </div>
        @Html.ValidationMessageFor(model => model.QuantityTypeID)
        <div id="multipleButtons">
            @*<div id="addTypeButton">Add Donation Type</div>
            <div id="addUserButton">Add Quantity Type</div>*@
            <div id="addButton">Add Donation Item</div>
        </div>
    }
</div>

<div id="backButton" onclick="window.location.href = '@Url.Action("Index", "DonationItem")'">Back</div>

<style>
    input[type=checkbox] {
        height: 25px;
        margin-top: auto;
        margin-bottom: auto;
    }

    .datepicker {
        background-color: white;
    }

    form {
        top: 0;
        left: 0;
    }

    .field-validation-error {
        display: block;
        word-wrap: break-word;
        margin-left: 50%;
    }

    #details_holder {
        position: absolute;
        display: flex;
        flex-direction: column;
        padding: 15px;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: rgba(128, 128, 128, 0.95);
        height: auto;
        min-width: 600px;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
    }

        #details_holder p {
            font-size: 25px;
            text-align: center;
            flex: 1;
        }

        #details_holder div {
            display: flex;
            flex-direction: row;
            height: 2.25em;
        }

            #details_holder div p {
                font-size: 20px;
                flex: 50%;
                text-align: left;
                vertical-align: middle;
                padding: 0;
                margin: 0;
            }

            #details_holder div input {
                flex: 50%;
            }

            #details_holder div select {
                flex: 50%;
            }

            #details_holder div button {
                background-color: white;
                flex: 50%;
            }

    .gj-datepicker {
        flex: 50%;
    }

    .gj-datepicker-md [role=right-icon] {
        top: 0.25em;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        opacity: 1;
    }

    #typeDropDown {
        position: absolute;
        top: 100%;
        left: 0;
        display: none;
    }

    #addButton, #addTypeButton, #addUserButton {
        position: relative;
        display: inline-block !important;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        margin-left: auto;
        margin-right: auto;
        padding: 10px;
        transition: background-color linear 0.5s;
        line-height: 50%;
    }

        #addButton:hover, #addTypeButton:hover, #addUserButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #backButton {
        position: fixed;
        left: 0;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        margin-left: 2vh;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #backButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #breadcrumb {
        position: absolute;
        top: 0px;
        width: 100%;
    }

    .breadcrumb-item {
        font-size: 25px;
    }

    .breadcrumb {
        top: 0;
        background-color: #33363b !important;
        padding-left: 60px !important;
    }

    #profile {
        position: relative;
        z-index: 7979;
        margin-left: auto;
        margin-bottom: auto;
        height: 61px;
        width: 20%;
        background-color: #33363b;
        transform: translateX(-3px);
    }

        #profile a {
            display: table;
            font-family: 'Raleway', sans-serif;
            font-weight: 200;
            font-size: 25px;
            text-decoration: none !important;
            color: #5a9ad6;
            line-height: 61px;
            vertical-align: middle;
            margin-left: auto;
            margin-right: auto;
        }

    .glyphicon {
        margin-left: 6px;
    }

    .dropdown-menu {
        background-color: #33363b;
    }

        .dropdown-menu li a {
            color: #5a9ad6;
        }
</style>

<script>
    $("#addButton").click(function (event) {
        swal({
            title: "Are you sure?",
            icon: "info",
            buttons: [
                true,
                "Yes",
            ],
            closeOnClickOutside: false,
        })
        .then((willDelete) => {
            if (willDelete) {
                $('#myForm').submit();
            }
        });
    });

