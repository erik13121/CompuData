
@{
    ViewBag.Title = "EquipmentSoftwareLicenses";
    @model CompuData.Models.SoftwareLicensesLine
}

<nav id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../MainMenu">Home</a></li>
        <li class="breadcrumb-item"><a href="../EquipmentManagementMenu">Equipment Management</a></li>
        <li class="breadcrumb-item"><a href="../SoftwareLicenses">Software Licenses</a></li>
        <li class="breadcrumb-item active" aria-current="page">Equipment Software Licenses</li>
    </ol>
</nav>

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
</head>

@Html.Partial("_ProfilePartial")

<div id="table_background">
    <p>Software Licences</p>
    <table id="SoftwareLicenceTable" class="display"></table>
    <div id="multipleButtons">
        <div id="addButton" onclick="window.location.href = '@Url.Action("Index", "SelectSoftware")'">Add Software Licence to Equipment</div>
    </div>
    <div id="backButton" onclick="window.location.href = '@Url.Action("Index", "SoftwareLicenses")'">Back</div>
</div>

<style>
    #table_background p {
        font-size: 25px;
        text-align: center;
    }

    #table_background {
        position: absolute;
        padding: 15px;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: rgba(128, 128, 128, 0.95);
        height: auto;
        min-width: 600px;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
    }

    #SupplierTable {
        background-color: #5a9ad6;
        font-size: 14px;
    }

    #multipleButtons {
        display: flex;
        flex-direction: row;
    }

    #addButton, #viewButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addButton:hover, #viewButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #addBookingButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addBookingButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #backButton {
        position: fixed;
        left: 0;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        margin-left: 2vh;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #backButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #breadcrumb {
        position: absolute;
        top: 0px;
        width: 100%;
    }

    .breadcrumb-item {
        font-size: 25px;
    }

    .breadcrumb {
        top: 0;
        background-color: #33363b !important;
        padding-left: 60px !important;
    }

    #profile {
        position: relative;
        z-index: 7979;
        margin-left: auto;
        margin-bottom: auto;
        height: 61px;
        width: 20%;
        background-color: #33363b;
        transform: translateX(-3px);
    }

        #profile a {
            display: table;
            font-family: 'Raleway', sans-serif;
            font-weight: 200;
            font-size: 25px;
            text-decoration: none !important;
            color: #5a9ad6;
            line-height: 61px;
            vertical-align: middle;
            margin-left: auto;
            margin-right: auto;
        }

    .glyphicon {
        margin-left: 6px;
    }

    .dropdown-menu {
        background-color: #33363b;
    }

        .dropdown-menu li a {
            color: #5a9ad6;
        }
</style>
<script>
    var table;
    $(document).ready(function () {
        table = $('#SoftwareLicenceTable').DataTable({
            serverSide: true,
            ajax: "/EquipmentSoftwareLicenses/PageData",
            autoWidth: true,
            scrollX: true,
            columns: [
                {
                    name: 'lineID',
                    data: 'lineID',
                    title: "ID",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'manufacturer',
                    data: "manufacturer",
                    title: "Manufacturer Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'modelNumber',
                    data: "modelNumber",
                    title: "Model Number",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'softwareName',
                    data: "softwareName",
                    title: "Software Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'lastActivatedDate',
                    data: "lastActivatedDate",
                    title: "Last Activated Date",
                    sortable: true,
                    searchable: true
                },

                {
                    name: 'activated',
                    data: "activated",
                    title: "Activated",
                    sortable: true,
                    searchable: true
                },
                {
                    "targets": -1,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-eye-open"></i>',
                    sortable: false,
                },
                {
                    "targets": -2,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-pencil"></i>',
                    sortable: false,
                },
                {
                    "targets": -3,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-trash"></i>',
                    sortable: false,
                }
            ]
        });
    });

    @Model.JavaScriptToRun
    function mySuccess() {
        swal("You have successfully added the Software Licence to the Equipment", {
            icon: "success",
        });
        //window.location = "/Vehicles/Index";
    }

    @TempData["js"];
    function myUpdateSuccess() {
        swal("You have successfully updated the Software Licence linked to the Equipment", {
            icon: "success",
        });
    }

    $.ajax({
        type: "POST",
        url: '@Url.Action("SetTempData","SoftwareLicenses")',
        success: function () {
        }
    });

    $('#SoftwareLicenceTable').on('click', '.glyphicon-eye-open', function () {
        var data = table.row($(this).parents('tr')).data();
        var lineID = data["lineID"];

        $.ajax({
            url: '@Url.Action("RedirectToEquipmentSoftwareLicenseDetails", "EquipmentSoftwareLicenseDetails")',
            type: 'POST',
            data: { lineID: lineID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url;
            }
        });
    });

    $('#SoftwareLicenceTable').on('click', '.glyphicon-pencil', function () {
        var data = table.row($(this).parents('tr')).data();
        var lineID = data["lineID"];
        @{Session["Referrer"] = System.IO.Path.GetFileName(Request.Url.AbsolutePath);}

        $.ajax({
            url: '@Url.Action("RedirectToModifyEquipmentSoftwareLicensesDetails", "ModifyEquipmentSoftwareLicense")',
            type: 'POST',
            data: { lineID: lineID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url;
            }
        });
    });

    $('#SoftwareLicenceTable').on('click', '.glyphicon-trash', function () {
        var data = table.row($(this).parents('tr')).data();
        var lineID = data["lineID"];

        swal({
            title: "Are you sure you want to delete this Software Licence linked to this Equipment?",
            icon: "warning",
            dangerMode: true,
            buttons: [
                true,
                "Yes",
            ],
            closeOnClickOutside: false,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '@Url.Action("Delete", "EquipmentSoftwareLicenses")',
                        type: 'POST',
                        data: { lineID: lineID },
                        dataType: 'json',
                        success: function (data) {
                            if (data.Url != "Cascading error!") {
                                swal("You have successfully deleted the Software Licence linked to the Equipment", {
                                    icon: "success",
                                }).then(() => {
                                    window.location.href = data.Url;
                                });
                            }
                            else {
                                swal("Cannot delete this due to it being used somewhere else in the system!", {
                                    icon: "warning",
                                });
                            }
                        }
                    });
                }
            });
    });
</script>




