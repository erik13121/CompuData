@{
    ViewBag.Title = "Index";
    @model CompuData.Models.Donor_Org
}

<nav id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../MainMenu">Home</a></li>
        <li class="breadcrumb-item"><a href="../DonorsMenu">Donors Menu</a></li>
        <li class="breadcrumb-item active" aria-current="page">Donor - Organization</li>
    </ol>
</nav>

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
</head>

@Html.Partial("_ProfilePartial")

<div id="table_background">
    <p>Donor - Organization</p>
    <table id="DonorOrgTable" class="display"></table>
    <div id="addButton" onclick="window.location.href = '@Url.Action("Index", "AddDonorOrg")'">Add Donor - Organization</div>
    <div id="backButton" onclick="window.location.href = '@Url.Action("Index", "DonorsMenu")'">Back</div>

</div>

<style>
    #table_background p {
        font-size: 25px;
        text-align: center;
    }

    #table_background {
        position: absolute;
        padding: 15px;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: rgba(128, 128, 128, 0.95);
        height: auto;
        min-width: 600px;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
    }

    #DonorOrgTable {
        background-color: #5a9ad6;
        font-size: 14px;
    }

    #multipleButtons {
        display: flex;
        flex-direction: row;
    }

    #addButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #addBookingButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addBookingButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #backButton {
        position: fixed;
        left: 0;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        margin-left: 2vh;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #backButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #breadcrumb {
        position: absolute;
        top: 0px;
        width: 100%;
    }

    .breadcrumb-item {
        font-size: 25px;
    }

    .breadcrumb {
        top: 0;
        background-color: #33363b !important;
        padding-left: 60px !important;
    }

    #profile {
        position: relative;
        z-index: 7979;
        margin-left: auto;
        margin-bottom: auto;
        height: 61px;
        width: 20%;
        background-color: #33363b;
        transform: translateX(-3px);
    }

        #profile a {
            display: table;
            font-family: 'Raleway', sans-serif;
            font-weight: 200;
            font-size: 25px;
            text-decoration: none !important;
            color: #5a9ad6;
            line-height: 61px;
            vertical-align: middle;
            margin-left: auto;
            margin-right: auto;
        }

    .glyphicon {
        margin-left: 6px;
    }

    .dropdown-menu {
        background-color: #33363b;
    }

        .dropdown-menu li a {
            color: #5a9ad6;
        }
</style>

<script>
    var table;
    $(document).ready(function () {
        table = $('#DonorOrgTable').DataTable({
            serverSide: true,
            ajax: "/DonorOrg/PageData",
            autoWidth: true,
            scrollX: true,
            columns: [
                {
                    name: 'donorOrgID',
                    data: 'donorOrgID',
                    title: "ID",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'orgName',
                    data: "orgName",
                    title: "Organization Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'contactNum',
                    data: "contactNum",
                    title: "Contact Number",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'contactEmail',
                    data: "contactEmail",
                    title: "Contact Email",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'thanked',
                    data: "thanked",
                    title: "Thanked",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'streetAddress',
                    data: "streetAddress",
                    title: "Street Address",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'city',
                    data: "city",
                    title: "City",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'areaCode',
                    data: "areaCode",
                    title: "Area Code",
                    sortable: true,
                    searchable: true
                },
                {
                    "targets": -1,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-eye-open"></i>',
                    sortable: false,
                },
                {
                    "targets": -2,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-pencil"></i>',
                    sortable: false,
                },
                {
                    "targets": -3,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-trash"></i>',
                    sortable: false,
                }
            ]
        });
    });

     @Model.JavaScriptToRun
    function mySuccess() {
        swal("You have successfully added a Donor - Organization", {
            icon: "success",
        });
        //window.location = "/Vehicles/Index";
    }

    @TempData["js"];
    function myUpdateSuccess() {
        swal("You have successfully updated the Donor - Organization", {
            icon: "success",
        });
    }

    $.ajax({
        type: "POST",
        url: '@Url.Action("SetTempData","DonorOrg")',
        success: function () {

        }
    });

    $('#DonorOrgTable').on('click', '.glyphicon-eye-open', function () {
        var data = table.row($(this).parents('tr')).data();
        var donorOrgID = data["donorOrgID"];

        $.ajax({
            url: '@Url.Action("RedirectToDonorOrgDetails", "DonorOrgDetails")',
            type: 'POST',
            data: { donorOrgID: donorOrgID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url; // your action should return an object having [redirecturl] property
            }
        });
    });

    $('#DonorOrgTable').on('click', '.glyphicon-pencil', function () {
        var data = table.row($(this).parents('tr')).data();
        var donorOrgID = data["donorOrgID"];

        $.ajax({
            url: '@Url.Action("RedirectToModifyDonorOrgDetails", "ModifyDonorOrg")',
            type: 'POST',
            data: { donorOrgID: donorOrgID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url;
            }
        });
    });

    $('#DonorOrgTable').on('click', '.glyphicon-trash', function () {
        var data = table.row($(this).parents('tr')).data();
        var donorOrgID = data["donorOrgID"];

        swal({
            title: "Are you sure you want to delete this Donor - Organization?",
            icon: "warning",
            dangerMode: true,
            buttons: [
                true,
                "Yes",
            ],
            closeOnClickOutside: false,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '@Url.Action("Delete", "DonorOrg")',
                        type: 'POST',
                        data: { donorOrgID: donorOrgID },
                        dataType: 'json',
                        success: function (data) {
                            if (data.Url != "Cascading error!") {
                                swal("You have successfully deleted the Donor - Organization", {
                                    icon: "success",
                                }).then(() => {
                                    window.location.href = data.Url;
                                });
                            }
                            else {
                                swal("Cannot delete this due to it being used somewhere else in the system!", {
                                    icon: "warning",
                                });
                            }
                        }
                    });
                }
            });
    });
</script>