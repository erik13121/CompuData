                                @Html.TextBoxFor(model => model.CellNum, new { @readonly = "readonly" })
                            </div>
                            <div>
                                <p>Personal Email:</p>
                                @Html.TextBoxFor(model => model.PersonalEmail, new { @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="LineItems" class="tab-pane fade">
