<script>
    $(document).ready(function () {
        $('tabitem1').on('click', function () {
            var x = document.getElementById("tabitem1").getAttribute("aria-expanded");

            if (x == "true") {
                x = "false"
            } else {
                x = "true"
            }
            document.getElementById("tabitem1").setAttribute("aria-expanded", x);
            document.getElementById("tabitem1").innerHTML = "aria-expanded = " + x;
        })

        $('.nav-tabs>li>a').on('click', function (e) {
            $(this).siblings().removeClass('active');
        })
    })
    $('#modifyButton').on('click', function () {
        var donorPID = @Model.DonorPID;

        $.ajax({
            url: '@Url.Action("RedirectToModifyDonorPersonDetails", "ModifyDonorPerson")',
            type: 'POST',
            data: { donorPID: donorPID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url;
            }
        });
    });

    $('#removeButton').on('click', function () {
        var donorPID = @Model.DonorPID;

        swal({
            title: "Are you sure you want to delete this Donor - Person?",
            icon: "warning",
            dangerMode: true,
            buttons: [
                true,
                "Yes",
            ],
            closeOnClickOutside: false,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '@Url.Action("Delete", "DonorPerson")',
                        type: 'POST',
                        data: { donorPID: donorPID },
                        dataType: 'json',
                        success: function (data) {
                            if (data.Url != "Cascading error!") {
                                swal("You have successfully deleted the Donor - Person", {
                                    icon: "success",
                                }).then(() => {
                                    window.location.href = data.Url;
                                });
                            }
                            else {
                                swal("Cannot delete this due to it being used somewhere else in the system!", {
                                    icon: "warning",
                                });
                            }
                            window.location.href = data.Url;
                        }
                    });
                }
            });
    });
</script>