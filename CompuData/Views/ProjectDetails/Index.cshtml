        @Html.TextBoxFor(model => model.ProjectName, new { @readonly = "readonly" })
    </div>
    <div>
        <p>Start Date:</p>
        @Html.TextBoxFor(model => model.StartDate, new { @readonly = "readonly" })
    </div>
    <div>
        <p>Expected Complete Date:</p>
        @Html.TextBoxFor(model => model.ExpectedFinishDate, new { @readonly = "readonly" })
    </div>
    <div>
        <p>Completed:</p>
        @Html.TextBoxFor(model => model.Finished, new { @readonly = "readonly" })
    </div>
    <div>
        <p>Project Description:</p>
        @Html.TextBoxFor(model => model.ProjectDescription, new { @readonly = "readonly" })
    </div>
    <div>
        <p>Project Type:</p>
        @Html.TextBoxFor(model => model.TypeName, new { @readonly = "readonly" })
    </div>
    <div>
        <p>User Initials:</p>
        @Html.TextBoxFor(model => model.Initials, new { @readonly = "readonly" })
    </div>
    <div>
        <p>User Last Name:</p>
        @Html.TextBoxFor(model => model.LastName, new { @readonly = "readonly" })
    </div>   
    <div id="multipleButtons">
        <a id="modifyButton" class="btn btn-dafault">Maintain</a>
        <a id="removeButton" class="btn btn-default">Remove</a>
    </div>
</div>

