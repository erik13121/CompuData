<script type="text/javascript">
    $(document).ready(function () {
        $('#vehiclesTable').DataTable();

        $('#startTimeSlot').on('change', function () {
            $('#endTimeSlot').html('');
            var firstValue = parseInt($('#startTimeSlot').val());

            for (i = firstValue + 1; i <= 24; i++) {
                if (i < 10) {
                    $('#endTimeSlot').append('<option value="' + i + '">0' + i + ':00</option>');
                }
                else {
                    $('#endTimeSlot').append('<option value="' + i + '">' + i + ':00</option>');
                }
            }
        });

        function mySuccess() {
            swal("You have successfully added a Schedule Time Slot to the Vehicle", {
                icon: "success",
            })
            .then((value) => {
                window.location.href = '../VehicleSchedules';
            });
        }

        $('#addButton').on('click', function () {
            if ($('#dayofWeek').val() == "") {
                swal("You first have to choose a day of the week!", {
                    icon: "warning",
                });                
            }
            else if ($('#startTimeSlot').val() == "") {
                swal("You first have to choose the starting time!", {
                    icon: "warning",
                });
            }
            else if ($('#endTimeSlot').val() == "") {
                swal("You first have to choose the ending time!", {
                    icon: "warning",
                });
            }
            else {
                $.ajax({
                url: '@Url.Action("AddDate", "AddVehicleSchedule")',
                type: 'POST',
                data: { day: $('#dayofWeek').val(), startTime: $('#startTimeSlot').val(), endTime: $('#endTimeSlot').val(), vehicleID: @Model.VehicleID },
                    success: function (data) {
                        if (data.toString() == "mySuccess()")
                        {
                            mySuccess();
                        }
                    }
                });
            }
        })
    })
</script>