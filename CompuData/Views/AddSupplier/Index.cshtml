    ViewBag.Title = "Index";
    @model CompuData.Models.Supplier

}

<nav id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../MainMenu">Home</a></li>
        <li class="breadcrumb-item"><a href="../ProcurementMenu">Procurement</a></li>
        <li class="breadcrumb-item"><a href="../Supplier">Suppliers</a></li>
