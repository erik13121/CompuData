<div class="col-md-6" id="mytwoColumns">
    <p id="myheading2">Add Supplier</p>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#PCRDetails" id="tabitem">Supplier Details</a></li>
        <li><a data-toggle="tab" href="#LineItems" id="tabitem">Banking Details</a></li>
        <li><a data-toggle="tab" href="#LineItems2" id="tabitem">Address Details</a></li>
    </ul>

    @using (@Html.BeginForm("Create", "AddSupplier", FormMethod.Post, new { id = "myForm" }))
    {
        @Html.HiddenFor(model => model.SupplierID)
        <div class="tab-content">
            <div id="PCRDetails" class="tab-pane fade in active">
                <div class="row-md-6">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <div>
                                <p>Name:</p>
                                @Html.EditorFor(model => model.Name)
                            </div>
                            @Html.ValidationMessageFor(model => model.Name)
                            <div>
                                <p>Contact Number:</p>
                                @Html.EditorFor(model => model.ContactNumber)
                            </div>
                            @Html.ValidationMessageFor(model => model.ContactNumber)
                            <div>
                                <p>Email Address:</p>
                                @Html.EditorFor(model => model.EmailAddress)
                            </div>
                            @Html.ValidationMessageFor(model => model.EmailAddress)
                            <div>
                                <p>VAT Number:</p>
                                @Html.EditorFor(model => model.VATNumber, new { htmlAttributes = new { @type = "number", @min = "0" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.VATNumber)
                        </div>
                    </div>
                </div>
            </div>
            <div id="LineItems" class="tab-pane fade">
                <div class="row-md-6">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body" id="cardbody2">
                            <div>
                                <p>Bank:</p>
                                @Html.EditorFor(model => model.Bank)
                            </div>
                            @Html.ValidationMessageFor(model => model.Bank)
                            <div>
                                <p>Account Number:</p>
                                @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @type = "number", @min = "0" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.AccountNumber)
                            <div>
                                <p>Branch Code:</p>
                                @Html.EditorFor(model => model.BranchCode, new { htmlAttributes = new { @type = "number", @min = "0" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.BranchCode)
                        </div>
                    </div>
                </div>
            </div>
            <div id="LineItems2" class="tab-pane fade">
                <div class="row-md-6">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body" id="cardbody2">
                            <div>
                                <p>Postal Address:</p>
                                @Html.EditorFor(model => model.POAddress)
                            </div>
                            @Html.ValidationMessageFor(model => model.POAddress)
                            <div>
                                <p>Postal City:</p>
                                @Html.EditorFor(model => model.POCity)
                            </div>
                            @Html.ValidationMessageFor(model => model.POCity)
                            <div>
                                <p>Postal Code:</p>
                                @Html.EditorFor(model => model.POAreaCode)
                            </div>
                            @Html.ValidationMessageFor(model => model.POAreaCode)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="multipleButtons">
            <div id="addButton">Save and Add Supplier</div>
        </div>
    }
</div>

