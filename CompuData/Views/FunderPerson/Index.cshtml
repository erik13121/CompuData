@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HttpContext.Current.Response.Cache.SetAllowResponseInBrowserHistory(false);
    HttpContext.Current.Response.Cache.SetCacheability(HttpCacheability.NoCache);
    @model CompuData.Models.Funder_Person
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<nav id="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../MainMenu/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="../FundersMenu/Index">Funders Menu</a></li>
        <li class="breadcrumb-item active" aria-current="page">Funders - Person</li>
    </ol>
</nav>

@Html.Partial("_ProfilePartial")

<div id="table_background">
    <p>Funders - Person</p>
    <table id="table_id" class="display" cellspacing="0"></table>
    @Html.HiddenFor(model => model.JavaScriptToRun)
    <div id="multipleButtons">
        <div id="addButton" onclick="window.location.href = '@Url.Action("Index", "AddFunderPerson")'">Add Funder - Person</div>
    </div>
    <div id="backButton" onclick="window.location.href = '@Url.Action("Index", "FundersMenu")'">Back</div>
</div>

<style>
    th, td {
        white-space: nowrap;
    }

    div.dataTables_wrapper {
        width: 1000px;
        margin: 0 auto;
    }

    #table_background p {
        font-size: 25px;
        text-align: center;
    }

    #table_background {
        position: absolute;
        padding: 15px;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: rgba(128, 128, 128, 0.95);
        height: auto;
        min-width: 600px;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
    }

    .dataTable {
        background-color: #5a9ad6;
        font-size: 14px;
    }

    #multipleButtons {
        display: flex;
        flex-direction: row;
    }

    #addButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #addBookingButton {
        position: relative;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        margin-top: 10px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #addBookingButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #backButton {
        position: fixed;
        left: 0;
        bottom: 0;
        z-index: 10000;
        text-decoration: none;
        color: white;
        cursor: pointer;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        margin-left: 2vh;
        box-sizing: border-box;
        border: solid white;
        border-width: 2px;
        border-radius: 50px 50px 50px 50px;
        padding: 10px;
        transition: background-color linear 0.5s;
    }

        #backButton:hover {
            background-color: rgba(0, 255, 255, 0.4);
        }

    #breadcrumb {
        position: absolute;
        top: 0px;
        width: 100%;
    }

    .breadcrumb-item {
        font-size: 25px;
    }

    .breadcrumb {
        top: 0;
        background-color: #33363b !important;
        padding-left: 60px !important;
    }

    #profile {
        position: relative;
        z-index: 7979;
        margin-left: auto;
        margin-bottom: auto;
        height: 61px;
        width: 20%;
        background-color: #33363b;
        transform: translateX(-3px);
    }

        #profile a {
            display: table;
            font-family: 'Raleway', sans-serif;
            font-weight: 200;
            font-size: 25px;
            text-decoration: none !important;
            color: #5a9ad6;
            line-height: 61px;
            vertical-align: middle;
            margin-left: auto;
            margin-right: auto;
        }

    .glyphicon {
        margin-left: 6px;
    }

    .dropdown-menu {
        background-color: #33363b;
    }

        .dropdown-menu li a {
            color: #5a9ad6;
        }
</style>

<script>
    var table;
    $(document).ready(function () {
        table = $('#table_id').DataTable({
            serverSide: true,
            ajax: "/FunderPerson/PageData",
            autoWidth: true,
            scrollX: true,
            columns: [
                {
                    name: 'funderPersonID',
                    data: 'funderPersonID',
                    title: "ID",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'firstName',
                    data: "firstName",
                    title: "First Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'middleName',
                    data: "middleName",
                    title: "Middle Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'lastName',
                    data: "lastName",
                    title: "Last Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'initials',
                    data: "initials",
                    title: "initials Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'cellNum',
                    data: "cellNum",
                    title: "Cell Number",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'personalEmail',
                    data: "personalEmail",
                    title: "Email Address",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'bank',
                    data: "bank",
                    title: "Bank",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'accountNumber',
                    data: "accountNumber",
                    title: "Account Number",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'branchCode',
                    data: "branchCode",
                    title: "Branch Code",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'streetAddress',
                    data: "streetAddress",
                    title: "Street Address",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'city',
                    data: "city",
                    title: "City",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'areaCode',
                    data: "areaCode",
                    title: "Area Code",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'thanked',
                    data: "thanked",
                    title: "Thanked",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'projectName',
                    data: "projectName",
                    title: "Project Name",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'typeName',
                    data: "typeName",
                    title: "Funder Type",
                    sortable: true,
                    searchable: true
                },
                {
                    "targets": -1,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-eye-open"></i>',
                    sortable: false,
                },
                {
                    "targets": -2,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-pencil"></i>',
                    sortable: false,
                },
                {
                    "targets": -3,
                    "data": null,
                    "defaultContent": '<i class="glyphicon glyphicon-trash"></i>',
                    sortable: false,
                }
            ]
        });
    });

    @Model.JavaScriptToRun
    function mySuccess() {
        swal("You have successfully added a Funder - Person", {
            icon: "success",
        });
        $("#JavaScriptToRun").val("");
    }

    @TempData["js"];
    function myUpdateSuccess() {
        swal("You have successfully updated the Funder - Person", {
            icon: "success",
        });
    }

    $.ajax({
        type: "POST",
        url: '@Url.Action("SetTempData","FunderOrg")',
        success: function () {

        }
    });

    $('#table_id').on('click', '.glyphicon-eye-open', function () {
        var data = table.row($(this).parents('tr')).data();
        var funderPersonID = data["funderPersonID"];

        $.ajax({
            url: '@Url.Action("RedirectToFunderPersonDetails", "FunderPersonDetails")',
            type: 'POST',
            data: { funderPersonID: funderPersonID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url; // your action should return an object having [redirecturl] property
            }
        });
    });

    $('#table_id').on('click', '.glyphicon-pencil', function () {
        var data = table.row($(this).parents('tr')).data();
        var funderPersonID = data["funderPersonID"];

        $.ajax({
            url: '@Url.Action("RedirectToModifyFunderPersonDetails", "ModifyFunderPerson")',
            type: 'POST',
            data: { funderPersonID: funderPersonID },
            dataType: 'json',
            success: function (data) {
                window.location.href = data.Url;
            }
        });
    });

    $('#table_id').on('click', '.glyphicon-trash', function () {
        var data = table.row($(this).parents('tr')).data();
        var funderPersonID = data["funderPersonID"];

        swal({
            title: "Are you sure you want to delete this Funder - Person?",
            icon: "warning",
            dangerMode: true,
            buttons: [
                true,
                "Yes",
            ],
            closeOnClickOutside: false,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '@Url.Action("Delete", "FunderOrg")',
                        type: 'POST',
                        data: { funderPersonID: funderPersonID },
                        dataType: 'json',
                        success: function (data) {
                            if (data.Url != "Cascading error!") {
                                swal("You have successfully deleted the Funder - Person", {
                                    icon: "success",
                                }).then(() => {
                                    window.location.href = data.Url;
                                });
                            }

                            else {
                                swal("Cannot delete this due to it being used somewhere else in the system!", {
                                    icon: "warning",
                                });
                            }
                        }
                    });
                }
            });
    });

    //$('.swal-icon--warning').css("border", "4px solid red !important");

    @*window.onload = function() {
        window.location.href = '@Url.Action("Index", "VehicleServices")';
    }*@
</script>